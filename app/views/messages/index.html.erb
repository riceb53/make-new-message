<% if @over_ten %>
 <%= link_to 'Show Previous', '?m=all' %>
<% end %>
<div class="ui segment">
 <% @messages.each do |message| %>
  <% if message.body %>
    <% if message.guy_id %>
     <% user = Guy.find(message.guy_id) %>
    <% else %>
     <% user =  Girl.find(message.girl_id) %>
    <% end %>
   <div class="item">
    <div class="content">
     <div class="header"><strong><%= user.name %></strong>     <%= message.message_time %></div>
      <div class="list">
       <div class="item">
        <i class="right triangle icon"></i>
         <%= message.body %>
      </div>
    </div>
   </div>
 </div>
 <% end %>
<% end %>
</div>
<%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
 <div class="field">
   <%= f.text_area :body, class: "form-control" %>
 </div>
 <% if current_user.instance_of? Guy %>
 <%= f.text_field :guy_id, value: current_user.id, type: "hidden" %>
 <% else %>
 <%= f.text_field :girl_id, value: current_user.id, type: "hidden" %>
 <% end %>
 <div>
   <%= f.submit "Add Reply", class: "ui blue labeled submit icon button" %>
 </div>
<% end %>
