<div class="ui segment">
 <h3>Mailbox</h3>
 <div class="ui list">
  <div class="item">
   <% @conversations.each do |conversation| %>

   <!-- new if -->
   <% if current_user.instance_of? Girl %>
      <% recipient = Guy.find(conversation.guy_id) %>
   <% else %>
      <% recipient = Girl.find(conversation.girl_id) %>
    <% end %>
    <%= link_to recipient.name, conversation_messages_path(conversation)%>
   <% end %>
  </div>
 </div>
</div>
<div class="ui segment">
 <h3>All Users</h3>
  <div class="ui list">
   <% @users.each do |user| %>
     <div class="item">
     <% if current_user.instance_of? Guy %>
       <%= user.name %> <%= link_to 'Message me!', conversations_path(guy_id: current_user.id, girl_id: user.id), method: 'post'%>
     <% else %>
        <%= user.name %> <%= link_to 'Message me!', conversations_path(girl: current_user.id, guy_id: user.id), method: 'post'%>
     <% end %>
 </div>

 <% end %>
 </div>
</div>
