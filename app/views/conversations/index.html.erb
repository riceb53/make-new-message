<div class="ui segment">
 <h3>Mailbox</h3>
 <div class="ui list">
  <div class="item">
  <%= current_type %>
   <% @conversations.each do |conversation| %>
   <% if conversation.guy_id == current_user.id ||      conversation.girl_id == current_user.id %>
   <!-- new if -->
   <% if current_type == 'Girl' %>
    <% if conversation.girl_id == current_user.id %>
      <% recipient = Guy.find(conversation.guy_id) %>
    <% else %>
      <% recipient = Girl.find(conversation.girl_id) %>
    <% end %>
    <%= link_to recipient.name,   conversation_messages_path(conversation)%>
    <!-- new end -->
    <% end %>
   <% end %>
  <% end %>
  </div>
 </div>
</div>
<div class="ui segment">
 <h3>All Users</h3>
  <div class="ui list">
   <% @users.each do |user| %>
     <div class="item">
   <%= user.name %> <%= link_to 'Message me!', conversations_path(guy_id: current_user.id, girl_id: user.id), method: 'post'%>
 </div>

 <% end %>
 </div>
</div>
